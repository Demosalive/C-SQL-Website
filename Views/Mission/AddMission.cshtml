<form action="../Mission/AddMission" method="post">
    <input type="text" name="MissionName" placeholder="MissionName" class="form-control mb-4" />
    <input type="datetime" name="DueDate" placeholder="Due Date" class="form-control mb-4" />
    <input type="number" name="Difficulty" min="0" max="100" placeholder="Difficulty" class="form-control mb-4" />

    <div class="form-control mb-4">
        Complete? <input type="checkbox" name="Complete" value="true" />
        <input type="checkbox" name="Complete" value="false" hidden />
    </div>
    
    <input type="submit" value="Add this Mission" class="form-control mb-4" />
</form>